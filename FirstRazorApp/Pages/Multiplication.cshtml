@page
@model FirstRazorApp.Pages.MultiplicationModel
@{
}

<h1>Välj nummer för att see multiplikationstabell</h1>

@for (int i = 1; i < 26; i++)
{
    <a asp-route-number="@i">@i</a>
}

<br />


@if (Model.SelectedNumber != null)
{
    <table>

        @for (int i = 1; i < Model.SelectedNumber +1; i++)
        {
            <tr>

                @for (int j = 1; j < Model.SelectedNumber +1; j++)
                {
                    <td>@(i * j)</td>
                }
            </tr>
        }
    </table>
}